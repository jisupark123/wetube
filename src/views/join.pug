extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="Post" autocomplete='off')
        input(name="userId" type="text" required placeholder="아이디")
        input(name="password" type="password" required placeholder="비밀번호")
        input(name="password2" type="password" required placeholder="비밀번호 확인")
        input(name="email" type="email" required placeholder="이메일")
        input(name="location" type="text" placeholder="Location")
        input(type="submit" value="완료")
        include partials/social-login