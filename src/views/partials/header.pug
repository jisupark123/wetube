header   
    a(href="/").header__logo
        i.fab.fa-youtube
        span WeTube
    form.search__form(autocomplete='off', action="/search")
        input.search__input(placeholder="Search" type="text" name="keyword")
        button
            i.fas.fa-search
    nav 
        ul
            if loggedIn
                li 
                    a(href="/video/upload") Upload Video 
                li 
                    a(href=`/user/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            span My Profile
                        else if loggedInUser.avatarUrl.includes("github") || isHeroku
                            img.header__avatar(src=loggedInUser.avatarUrl)
                        else 
                            img.header__avatar(src="/" + loggedInUser.avatarUrl)
                li 
                    a(href="/user/edit") Edit Profile 
                li 
                    a(href="/user/logout") Log Out 
            else
                li 
                    a(href="/join") Join  
                li 
                    a(href="/login") Login 
             
            